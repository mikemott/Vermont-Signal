# API Keys for LLM Services
ANTHROPIC_API_KEY=your_claude_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Admin API Security
ADMIN_API_KEY=your_secure_random_token_here

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-production-domain.com

# Model Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20241022
GEMINI_MODEL=gemini-1.5-flash
OPENAI_MODEL=gpt-4o-mini

# Pipeline Configuration
CHUNK_SIZE=200
CHUNK_OVERLAP=50
CONFIDENCE_THRESHOLD=0.4
SIMILARITY_THRESHOLD=0.75
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Processing Mode
BATCH_MODE=false
PARALLEL_PROCESSING=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=vermont_news_analyzer/logs/pipeline.log

# Wikidata API
WIKIDATA_API_ENDPOINT=https://www.wikidata.org/w/api.php
ENABLE_WIKIDATA_ENRICHMENT=true
